generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @id @default(autoincrement())
  name          String
  email         String  @unique
  password      String
  country       String?
  provinceState String?
  city          String?
  Ad            Ad[]
}

model Ad {
  id          Int        @id @default(autoincrement())
  title       String
  price       Int
  description String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int
  images      Image[]
  createdDate DateTime   @default(now())
  categories  Category[]
}

model Image {
  id   Int      @id @default(autoincrement())
  url  String
  ad   Ad       @relation(fields: [adId], references: [id], onDelete: Cascade)
  adId Int
  hero Boolean?
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
  ads  Ad[]
}

